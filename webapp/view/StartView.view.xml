<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="weasel.challenge.controller.StartView"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" > 
	<App>
		<pages>
			<Page title="{i18n>GO TO RFID}">
				<f:SimpleForm
				class="container1"
				id="container1">
						<Button class="StartButton"
						id="StartButton"
						text="START"
						press="startButtonPressed" />
						<Button class="StopButton"
						id="StopButton"
						text="STOP"
						press="stopButtonPressed" />
				</f:SimpleForm>
				<f:SimpleForm
				class="container2"
				id="container2">
					<Button class = "ResetRouteButton"
					id = "ResetRouteButton"
					text = "RESET ROUTE"
					press = "resetRouteButtonPressed" />
					<Button class = "CalculateRouteButton"
					id = "CalculateRouteButton"
					text = "CALCULATE ROUTE"
					press = "calculateRouteButtonPressed" />
				</f:SimpleForm>
				<f:SimpleForm 
				class="container3"
				id="container3">
					<Input class = "RfidTagInput"
					id = "RfidTagInput"
					value = ""
					enabled = "true" />
					<Button class = "GoToRfidTagButton"
					id = "GoToRfidTagButton"
					text = "GO"
					press = "goToRfidTagButtonPressed"/>
				</f:SimpleForm>
			</Page>
		</pages>
	</App>
</mvc:View>